extends templates/master

block body
  nav#nav.nav(aria-label=text['index.nav.label'] hidden)
    button#navigation-btn.nav__button(aria-expanded='false', aria-controls='navigation-list' aria-label=text['index.nav.menu'])
      span.nav__burger
      span.nav__text #{text['index.nav.menu']}
    ul#navigation-list.nav__list
      li.nav__item
        a.nav__link.bkgd-blue(href='#itinerary') #{text['index.nav.itinerary']}
      li.nav__item
        a.nav__link.bkgd-teal(href='#about') #{text['index.nav.about']}
      li.nav__item
        a.nav__link.bkgd-yellow(href='#timeline') #{text['index.nav.timeline']}
      li.nav__item
        a.nav__link.bkgd-orange(href='#photos') #{text['index.nav.photos']}
      li.nav__item
        a.nav__link.bkgd-red(href='#faq') #{text['index.nav.faq']}
  a.language-picker(aria-label=text['index.lang.label'], href=text['index.lang.url'])
    span.language-picker__ru #{text['index.lang.icon']}
  main.index-page
    header#welcome.header
      h1.full-width #{text['index.header.title']}
      p #{text['index.header.location']}
      p: time(datetime='2018-09-08') #{text['index.header.date']}
      span#countdown.countdown.full-width(role='timer', aria-live='polite', aria-atomic='true')
      a(href=text['index.header.url']).rsvp-button: span #{text['index.header.rsvp']}
    section#itinerary
      h2.forever-full.bkgd-blue: span #{text['index.nav.itinerary']}
      section.itinerary
        header.itinerary__title
          h3 #{text['index.itinerary.ceremony.title']}
          p: time(datetime='2018-09-08 15:30') #{text['index.itinerary.ceremony.time']}
        address
          p #{text['index.itinerary.park']}
          p #{text['index.itinerary.ceremony.address.lineTwo']}
          p #{text['index.itinerary.ceremony.address.lineThree']}
        details.itinerary__map
          summary #{text['index.itinerary.map']}
          iframe.full-width(src='https://www.google.com/maps/embed/v1/place?key=AIzaSyAD3ow3jbGkVnlpEUB8wM-Imp6A0SVaEqg&q=place_id:ChIJ91jlwxjhBIgRgHC28q9I5ls')
        p #{text['index.itinerary.ceremony.desc']}
      section.itinerary
        header.itinerary__title
          h3 #{text['index.itinerary.photos.title']}
          p: time(datetime='2018-09-08 16:00') #{text['index.itinerary.photos.time']}
        p #{text['index.itinerary.park']}
        p #{text['index.itinerary.photos.desc']}
      section.itinerary
        header.itinerary__title
          h3 #{text['index.itinerary.cocktail.title']}
          p: time(datetime='2018-09-08 16:30') #{text['index.itinerary.cocktail.time']}
        address
          p #{text['index.itinerary.box']}
          p #{text['index.itinerary.cocktail.address.lineTwo']}
          p #{text['index.itinerary.cocktail.address.lineThree']}
        details.itinerary__map
          summary #{text['index.itinerary.map']}
          iframe.full-width(src='https://www.google.com/maps/embed/v1/directions?key=AIzaSyAD3ow3jbGkVnlpEUB8wM-Imp6A0SVaEqg&origin=Virmond+Park,Mequon+WI&destination=The+Box,Milwaukee+WI')
        p #{text['index.itinerary.cocktail.desc']}
      section.itinerary
        header.itinerary__title
          h3 #{text['index.itinerary.reception.title']}
          p: time(datetime='2018-09-08 18:30') #{text['index.itinerary.reception.time']}
        p #{text['index.itinerary.box']}
        p #{text['index.itinerary.reception.desc']}
    section#about
      h2.forever-full.bkgd-teal: span #{text['index.nav.about']}
      p.about__p
        span.about__person.about__person--sarah #{text['index.about.sarah']}
        | #{text['index.about.desc10']}
      p.about__p
        span.about__person.about__person--michail #{text['index.about.michail']}
