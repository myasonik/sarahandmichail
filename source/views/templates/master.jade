doctype html
html(lang="en")
    head
        title Michail and Sarah's Wedding!

        meta(charset='UTF-8')
        meta(name='robots' content='noindex')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Comfortaa:700|Open+Sans&amp;subset=cyrillic")

        //- link(rel='dns-prefetch', href='//example.com')

        if !production
            link(rel='stylesheet', href='/main.css')
        else
            link(rel='stylesheet', href='/main.min.css')

    body
        block body

    #outdated
        h6 #{text['browserError.heading']}
        p !{text['browserError.body']}
        p.last: a(href='#' id='btnCloseUpdateBrowser' title='Close' role='button' aria-label='Close') &times;
